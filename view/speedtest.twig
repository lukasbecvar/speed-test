{% extends 'common/main-base.twig' %}

{% block body %}
<div class="container">
    <div class="ip-info">
        Your IP Address: 
        <strong>
            {% if isPrivate %}
                {{ ipAddress }} (Private Range)
            {% else %}
                {{ ipAddress }}
            {% endif %}
        </strong>
    </div>

    <div id="ping-result">
        <p>Ping: <span id="ping">-</span> ms</p>
    </div>

    <div class="gauges-container">
        <div class="gauge-wrapper" id="download-wrapper">
            <h3>Download</h3>
            <canvas id="download-gauge"></canvas>
            <div class="gauge-text">
                <div class="gauge-unit">Mbps</div>
                <div class="gauge-speed" id="download-speed">0.00</div>
            </div>
        </div>
        <div class="gauge-wrapper" id="upload-wrapper">
            <h3>Upload</h3>
            <canvas id="upload-gauge"></canvas>
            <div class="gauge-text">
                <div class="gauge-unit">Mbps</div>
                <div class="gauge-speed" id="upload-speed">0.00</div>
            </div>
        </div>
    </div>

    <div class="status-text">Press Start to begin</div>

    <button id="start-test">Start</button>
</div>

<div id="results-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <h2>Test Complete!</h2>
        <div class="results-summary">
            <div class="result-item">
                <span class="result-label">Ping</span>
                <div class="result-value"><span id="ping-result-modal"></span> ms</div>
            </div>
            <div class="result-item">
                <span class="result-label">Max Download</span>
                <div class="result-value"><span id="max-download-result"></span> Mbps</div>
            </div>
            <div class="result-item">
                <span class="result-label">Max Upload</span>
                <div class="result-value"><span id="max-upload-result"></span> Mbps</div>
            </div>
        </div>
        <button id="close-modal">Test Again</button>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
